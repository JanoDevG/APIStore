<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title APIStore</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body style="padding-top: 0px">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand">APIStore</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
    </ul>
    <span class="navbar-text">
        @{
            Ecomerce.Models.UsuariosViewModel usu = (Ecomerce.Models.UsuariosViewModel)Session["Usuario"];
            if (usu != null)
            {
                <span class="navbar-text">
                    Hola! @usu.Nombre
                </span>
                <a href="/Usuarios/Cerrar">Cerrar Sesión</a>
            }
            else
            {
                <a class="btn btn-secondary" href="/Usuarios">Iniciar Sesión</a>
                <a class="btn btn-primary" href="/Usuarios/Registro">Registrarse</a>
            }
        }
    </span>
  </div>
</nav>
    <section class="row col-md-12">
        <div class="col-md-8">
            @RenderBody()
        </div>
        <div class="col-md-4" id="contenedorCarrito">
        </div>
    </section>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>