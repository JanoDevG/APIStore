@model IEnumerable<ModelAPIStore.Imagenes>

@{
    ViewBag.Title = "Imágenes";
}

<h2>Imágenes</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productos.nombre_producto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img width="100" src="@item.url" />
            <a href="@item.url">Imagen</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productos.nombre_producto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_imagen }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_imagen }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_imagen })
        </td>
    </tr>
}

</table>
