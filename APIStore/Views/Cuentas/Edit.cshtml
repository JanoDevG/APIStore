            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.suspencion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.suspencion)
                    @Html.ValidationMessageFor(model => model.suspencion, "", new { @class = "text-danger" })
