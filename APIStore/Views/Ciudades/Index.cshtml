@model IEnumerable<ModelAPIStore.Ciudades>

@{
    ViewBag.Title = "Inicio";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre_ciudad)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Regiones.nombre_region)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_ciudad)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Regiones.nombre_region)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_ciudad }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_ciudad }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_ciudad })
        </td>
    </tr>
}

</table>
